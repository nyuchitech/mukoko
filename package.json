{
  "name": "harare-metro",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "description": "Zimbabwe news aggregator built with React and Cloudflare Workers",
  "keywords": [
    "zimbabwe",
    "news",
    "aggregator",
    "react",
    "cloudflare-workers",
    "harare",
    "herald",
    "newsday",
    "chronicle"
  ],
  "author": "Harare Metro Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf node_modules package-lock.json dist",
    "clean:cache": "rm -rf node_modules/.vite",
    "dev:worker": "npx wrangler dev worker/index.js",
    "deploy:worker": "npx wrangler deploy worker/index.js",
    "deploy": "npm run build && npm run deploy:worker",
    "start:worker": "npx wrangler dev",
    "build:worker": "npx wrangler build worker/index.js",
    "test:worker": "npx wrangler test worker/index.js",
    "test:worker:ui": "npx wrangler test worker/index.js --ui",
    "coverage:worker": "npx wrangler test worker/index.js --coverage",
    "build:analytics": "echo \"Analytics build complete\"",
    "test:analytics": "echo \"Testing analytics components\"",
    "deploy:analytics": "npm run build && npm run deploy",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:worker\"",
    "typecheck": "tsc --noEmit",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "setup:shadcn": "echo \"Setting up ShadCN UI components...\" && npm install"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.1",
    "@cloudflare/workers-types": "^4.20240208.0",
    "@heroicons/react": "^2.1.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "fast-xml-parser": "^4.5.3",
    "focus-trap-react": "^10.2.3",
    "framer-motion": "^11.0.3",
    "itty-router": "^4.0.27",
    "lru-cache": "^10.2.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-query": "^3.39.3",
    "recharts": "^2.15.3",
    "sonner": "^1.4.3",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.2",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "miniflare": "^3.20240208.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.2",
    "workbox-webpack-plugin": "^7.3.0",
    "wrangler": "^4.19.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyuchitech/harare-metro.git"
  },
  "bugs": {
    "url": "https://github.com/nyuchitech/harare-metro/issues"
  },
  "homepage": "https://www.hararemetro.co.zw"
}
