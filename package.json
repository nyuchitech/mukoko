{
  "name": "mukoko",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "description": "Mukoko - Modern news aggregation platform built with React and Cloudflare Workers",
  "keywords": [
    "mukoko",
    "news",
    "aggregator",
    "react",
    "cloudflare-workers",
    "supabase",
    "enterprise",
    "pwa",
    "progressive-web-app"
  ],
  "author": "Mukoko Team",
  "license": "MIT",
  "scripts": {
    "dev": "wrangler dev --env preview",
    "dev:local": "vite",
    "dev:worker": "wrangler dev --env preview",
    "dev:full": "concurrently \"npm run dev:local\" \"npm run dev:worker\"",
    "deploy": "echo 'Deployment disabled for local testing'",
    "deploy:preview": "echo 'Preview deployment disabled for local testing'",
    "build": "npm run build:frontend && npm run build:worker",
    "build:frontend": "vite build",
    "build:worker": "echo 'Worker files ready'",
    "preview": "vite preview --port 5173",
    "worker:refresh-config": "curl \"https://app.mukoko.com/api/admin/refresh-config\"",
    "worker:clear-cache": "curl \"https://app.mukoko.com/api/admin/clear-cache\"",
    "worker:health": "curl \"https://app.mukoko.com/api/health\"",
    "start:local": "./scripts/dev-local.sh",
    "setup:local": "cp .env.example .env.local && echo 'âœ… Local environment created. Please update .env.local with your Supabase credentials.'",
    "analyze:bundle": "npx vite build --analyze",
    "build:analytics": "echo \"Analytics build complete\"",
    "test:analytics": "echo \"Testing analytics components\"",
    "deploy:analytics": "npm run build && npm run deploy"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@supabase/supabase-js": "^2.56.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/mongodb": "^4.0.7",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "fast-xml-parser": "^5.2.5",
    "focus-trap-react": "^11.0.4",
    "framer-motion": "^12.23.12",
    "itty-router": "^5.0.22",
    "lru-cache": "^11.1.0",
    "lucide-react": "^0.541.0",
    "mongodb": "^6.18.0",
    "node-fetch": "^3.3.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-query": "^3.39.3",
    "recharts": "^3.1.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@eslint/js": "^9.34.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.34.0",
